</head>

<body>
    
  
    <div class="hero-image" id="first">
        <%- include('./partials/navbar.ejs') %>

    <div class="hero-text">
        <h1 class="hero-text__header">GOhiking</h1>
        <h4 class="hero-text__attach">Find trails that fit your nature for free!</h4>
    </div>  
</div>



<div class="mx-5 flashMsg">
    <%- include('./partials/flashMsg.ejs') %>
</div>

<div class="echapees-belles"> 
  <div class="logo-text">
      <h3>The mountains according to your desires</h3>
      <p>Because every hiker is different</p>

  </div>
</div>

<div class="map-box my-5">
    <i id="map-box__toggler" class="fas fa-map-marker-alt "></i>
    <div class="map-box__map" id='map'></div>
</div>
<div class="scrollDown-box my-5">
    <a href="#last"><i id="scrollDown-box__scroller" class="fas fa-arrow-down"></i></a>
</div>
<div class="row row-cols-1 row-cols-md-3 mt-5">
   

    <% allTrails.forEach(trail => { %>
     
   
    <div class="col mb-4">
      <!-- Card -->
      <div class="card h-80 w-100">
  
        <!--Card image-->
        <div class="view overlay">
          <img class="card-img-top" src=<%= trail.trail_image %>
            alt="Card image cap">
          <a href="#!">
            <div class="mask rgba-white-slight"></div>
          </a>
        </div>
  
        <!--Card content-->
        <div class="card-body">
          <a class="col-xs-6 col-lg-4" href="/trails/<%=trail.trail_id %>">
          <!--Title-->
          <h2 class="card-title"><%= trail.trail_name %></h2>
          <!--Text-->
          <h4 class="card-text text-muted">
            <%= trail.trail_location %>
          </h4>
          <!-- Provides extra visual weight and identifies the primary action in a set of buttons -->
          <button type="button" class="btn btn-outline-success btn-md" >View <%= trail.trail_name %>
        </button>
      </a>
        </div>
  
      </div>
      <!-- Card -->
    </div>
    
    <% }) %>
 
  </div>






<div id="last"></div>
<div class="bottumPage">
    <a href="/home"><i class="mx-4 fas fa-home"></i></a>
    <a href="/campgrounds"><i class="mx-4 fas fa-campground"></i></a>
    <a href="/campgrounds/new"><i class="mx-4 fas fa-map-marked-alt"></i></a>
    <% if(!active_user_email){ %>
        <a href="/login"><i class="mx-4 fas fa-user-check"></i></a>
        <a href="/Signup"><i class=" mx-4 fas fa-user-plus"></i></a>
        <% }else{ %>
            <a href="/Logout"><i class="mx-4 fas fa-sign-out-alt"></i></a>
            <a href="/Signout"><i class=" mx-4 fas fa-user-minus"></i></a>
            <% } %>
                <a href="#first"> <i class="fas fa-arrow-up"></i></a>
</div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

  <script>
    const API_KEY = '<%- process.env.TOMTOM_API_KEY%>';
    const allTrails = <%- JSON.stringify(allTrails)%> ;
  </script>
  <script>
    const center = [4.85, 45.75];  // Lyon (Fr) longitude & latitude 

    let map = tt.map({
      key: API_KEY,
      container: "map",
      center: center,
      zoom: 5
    })
    const popupOffsets = {
      top: [0, 0],
      bottom: [0, -70],
      "bottom-right": [0, -70],
      "bottom-left": [0, -70],
      left: [25, -35],
      right: [-25, -35],
    }

    map.on('load', () => {




      // Add markers to the map
      allTrails.forEach(trail => {
        let popup = new tt.Popup({
          offset: popupOffsets
        }).setHTML(`
        <div style="width: 170px; height: 130px; background-color: #fff; border-radius: 4px; box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);">
          <img src=${trail.trail_image} alt="Image" style="width:100%; height: 70%;">
          <h6 ><b>${trail.trail_name}</h6> 
         
        </div>

      
        `);
        let marker = new tt.Marker().setLngLat([trail.trail_longitude, trail.trail_latitude]).setPopup(popup).addTo(map);
      });

      map.addControl(new tt.FullscreenControl());
      map.addControl(new tt.NavigationControl());




    });
  </script>
</body>

</html>